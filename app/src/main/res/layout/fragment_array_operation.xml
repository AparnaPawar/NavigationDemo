<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txtInput"
        android:layout_marginTop="21dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Enter Elements"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/edtInput"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="textPersonName"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/btnAdd"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:text="Add"
        android:layout_toEndOf="@+id/txtInput"
        android:layout_toRightOf="@+id/txtInput"
        android:layout_below="@+id/edtInput"/>

    <Button
        android:layout_height="wrap_content"

        android:layout_width="wrap_content"
        android:id="@+id/btnDisplay"
        android:layout_marginTop="12dp"
        android:text="Display"
        android:layout_below="@+id/btnAdd"
        android:layout_alignStart="@+id/btnAdd"
        android:layout_alignLeft="@+id/btnAdd"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txtEven"
        android:text="Sum Of Even No"
        android:layout_alignStart="@+id/txtOdd"

        android:layout_alignLeft="@+id/txtOdd"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/edtEven"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBottom="@+id/txtEven"
        android:layout_alignBaseline="@+id/txtEven"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txtOdd"
        android:text="Sum Of Odd No"
        android:layout_alignStart="@+id/txtSort"
        android:layout_alignLeft="@+id/txtSort"
        android:layout_marginBottom="52dp"
        android:layout_alignBottom="@+id/txtEven"/>


    <EditText

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/edtOdd"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"

        android:inputType="textPersonName"
        android:layout_alignBottom="@+id/txtOdd"
        android:layout_alignBaseline="@+id/txtOdd"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txtSort"
        android:text="Sorted Array"
        android:layout_marginBottom="23dp"

        android:layout_toStartOf="@+id/btnAdd"
        android:layout_toLeftOf="@+id/btnAdd"
        android:layout_above="@+id/edtOdd"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/edtSort"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBottom="@+id/txtSort"
        android:layout_alignBaseline="@+id/txtSort"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txtArray"
        android:text="Array Elements Are"
        android:layout_alignStart="@+id/txtInput"
        android:layout_alignLeft="@+id/txtInput"
        android:layout_marginBottom="52dp"
        android:layout_above="@+id/edtSort"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/edtArray"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="Name"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignStart="@+id/edtSort"
        android:layout_alignLeft="@+id/edtSort"
        android:layout_alignBottom="@+id/txtArray"
        android:layout_alignBaseline="@+id/txtArray"/>


</RelativeLayout>
