<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject1"
        android:id="@+id/txtFirst"
        android:layout_alignBottom="@+id/edtFirst"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtFirst"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/edtSecond"
        android:layout_alignStart="@+id/edtSecond" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject2"
        android:id="@+id/txtSecond"
        android:layout_alignBottom="@+id/edtSecond"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtSecond"
        android:ems="10"
        android:layout_below="@+id/edtFirst"
        android:layout_alignLeft="@+id/edtThird"
        android:layout_alignStart="@+id/edtThird" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject3"
        android:id="@+id/txtThird"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/txtSecond"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtThird"
        android:ems="10"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:layout_above="@+id/txtFourth"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject4"
        android:id="@+id/txtFourth"
        android:layout_below="@+id/txtThird"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtFourth"
        android:ems="10"
        android:layout_above="@+id/edtFifth"
        android:layout_alignLeft="@+id/edtThird"
        android:layout_alignStart="@+id/edtThird" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject5"
        android:id="@+id/txtFifth"
        android:layout_below="@+id/txtFourth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtFifth"
        android:ems="10"
        android:layout_alignBottom="@+id/txtFifth"
        android:layout_alignLeft="@+id/edtFourth"
        android:layout_alignStart="@+id/edtFourth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject6"
        android:id="@+id/txtSixth"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/txtFifth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtSixth"
        android:ems="10"
        android:layout_alignBottom="@+id/txtSixth"
        android:layout_alignLeft="@+id/edtFifth"
        android:layout_alignStart="@+id/edtFifth" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRADE"
        android:id="@+id/btnGrade"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/txtSixth"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtGrade"
        android:ems="10"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/btnGrade"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
