<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount Principal"
        android:id="@+id/txtAmount"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtAmount"
        android:ems="10"
        android:layout_alignTop="@+id/txtAmount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annual Rate of Interest"
        android:id="@+id/txtRateAnnual"
        android:layout_below="@+id/edtAmount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtRateAnnual"
        android:ems="10"
        android:layout_alignTop="@+id/txtRateAnnual"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/txtTime"
        android:layout_below="@+id/edtRateAnnual"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtTime"
        android:ems="10"
        android:layout_below="@+id/edtRateAnnual"
        android:layout_alignLeft="@+id/edtRateAnnual"
        android:layout_alignStart="@+id/edtRateAnnual" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Years"
        android:id="@+id/txtYears"
        android:layout_below="@+id/edtTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtYears"
        android:ems="10"
        android:layout_below="@+id/edtTime"
        android:layout_alignLeft="@+id/edtTime"
        android:layout_alignStart="@+id/edtTime" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compound Interest"
        android:id="@+id/btnCal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compound Interest Is"
        android:id="@+id/txtResult"
        android:layout_below="@+id/btnCal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtResult"
        android:ems="10"
        android:layout_alignTop="@+id/txtResult"
        android:layout_toRightOf="@+id/txtRateAnnual"
        android:layout_toEndOf="@+id/txtRateAnnual" />


</RelativeLayout>
