<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the Amount"
        android:id="@+id/txtAmount"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtAmount"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show"
        android:id="@+id/btnShow"
        android:layout_below="@+id/edtAmount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500"
        android:id="@+id/txt500"
        android:layout_below="@+id/btnShow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt500"
        android:ems="10"
        android:layout_alignTop="@+id/txt500"
        android:layout_alignLeft="@+id/edt100"
        android:layout_alignStart="@+id/edt100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/txt100"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/txt500"
        android:layout_alignLeft="@+id/txt500"
        android:layout_alignStart="@+id/txt500" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt100"
        android:ems="10"
        android:layout_alignTop="@+id/txt100"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:id="@+id/txt50"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/txt100"
        android:layout_alignLeft="@+id/txt100"
        android:layout_alignStart="@+id/txt100" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt50"
        android:ems="10"
        android:layout_alignTop="@+id/txt50"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:id="@+id/txt20"
        android:layout_below="@+id/txt50"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt20"
        android:ems="10"
        android:layout_alignTop="@+id/txt20"
        android:layout_alignLeft="@+id/btnShow"
        android:layout_alignStart="@+id/btnShow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:id="@+id/txt10"
        android:layout_below="@+id/txt20"
        android:layout_toRightOf="@+id/txt20"
        android:layout_toEndOf="@+id/txt20"
        android:layout_marginTop="19dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt10"
        android:ems="10"
        android:layout_alignTop="@+id/txt10"
        android:layout_alignLeft="@+id/edt20"
        android:layout_alignStart="@+id/edt20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/txt5"
        android:layout_below="@+id/txt10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt5"
        android:ems="10"
        android:layout_alignTop="@+id/txt5"
        android:layout_toRightOf="@+id/edt10"
        android:layout_toEndOf="@+id/edt10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/txt1"
        android:layout_below="@+id/txt5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt1"
        android:ems="10"
        android:layout_alignTop="@+id/txt1"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
